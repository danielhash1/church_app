<div class="bg-gray-100 flex justify-center items-center h-screen w-full">

  <div class="w-full max-w-md">
    <div class="bg-white rounded-2xl shadow-md p-8  mb-20">

      <h2 class="text-2xl font-bold text-center text-gray-700 mb-6 ">Login to your account</h2>

      <%= form_with url: admin_session_path, method: :post, local: true, class: "space-y-10" do |f| %>
        <div class="mb-4">
          <%= f.label :email, class: "block text-gray-700" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-3 py-2 mt-1 text-gray-700 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500", required: true %>
        </div>

        <div class="mb-4">
          <%= f.label :password, class: "block text-gray-700" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "w-full px-3 py-2 mt-1 text-gray-700 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500", required: true %>
        </div>

        <%= f.submit "Log in", class: "cursor-pointer w-full py-2 mt-2 px-4 bg-blue-600 text-white rounded-lg font-semibold hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      <% end %>
    </div>
  </div>

</div>
