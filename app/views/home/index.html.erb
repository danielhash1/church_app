<!-- Styles for smooth transitions -->
<style>
    .hiddenText {
        max-height: 0;
        overflow: hidden;
        transition: max-height 0.5s ease-out;
    }

    .showText {
        max-height: 500px; /* adjust to accommodate your content */
        transition: max-height 0.5s ease-in;
    }
</style>

<script>
    function toggleText(language) {
        var moreText = document.getElementById("moreText" + language);
        var showMoreBtn = document.getElementById("showMoreBtn" + language);
        
        if (moreText.classList.contains("hiddenText")) {
            moreText.classList.remove("hiddenText");
            moreText.classList.add("showText");
            showMoreBtn.innerText = "Show Less...";
        } else {
            moreText.classList.remove("showText");
            moreText.classList.add("hiddenText");
            showMoreBtn.innerText = "Show More...";
        }
    }
</script>




